<h2><%= t('authlogic.user_sessions.login') %></h2>

<% form_for @user_session, :url => user_session_path do |f| %>

  <%= error_messages_for :user_session, :header_message => "", :message => "" %>
  
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label t('authlogic.attributes.user_session.password') %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label t('authlogic.attributes.user_session.remember_me') %><br />
  <br />
  <%= link_to t('authlogic.password_resets.forgot_your_password'), new_password_reset_path %><br />
  <br />
  <%= f.submit t('authlogic.user_sessions.log_in') %>
<% end %>